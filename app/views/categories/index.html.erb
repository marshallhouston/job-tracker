<h3>All Categories</h3>

<h4><%= link_to "Create a new category", new_category_path %></h4>

<ul class='category'>
<% @categories.each do |category| %>
    <li class='category'><h4><%= link_to category.title, category_path(category) %></h4><br><br>
      <%= link_to "Edit", edit_category_path(category) %><br>
      <%= link_to "Delete", category_path(category), method: "delete" %><br></li>
<% end %>
</ul>
