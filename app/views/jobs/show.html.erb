<ul class='job-show'>
  <p>Title: <%= @job.title %></p>

  <p>Description: <%= @job.description %></p>

  <p>Level of Interest: <%= @job.level_of_interest %></p>

  <p>City: <%= @job.city %></p>
</ul>

<%= link_to "Edit Job", edit_company_job_path(@job.company, @job) %><br>
<%= link_to "Delete Job", company_job_path(@job.company, @job), method: "delete" %><br/>

Company: <%= link_to @job.company.name, company_path(@job.company) %>

<%= render partial: '/comments/form' %>

<div class='comments'><%= render partial: 'jobs/comment', collection: @job.comments.reverse %></div>
